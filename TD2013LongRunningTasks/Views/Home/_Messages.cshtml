<div id="messages" data-bind="visible: loaded" style="display: none;">
    
    <div class="alert alert-error" data-bind="visible: error">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Error!</strong> <span data-bind="text: error"></span>
    </div>    

    <div class="alert" data-bind="visible: warning">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Warning!</strong> <span data-bind="text: warning"></span>
    </div>
    
    <div class="alert alert-success" data-bind="visible: success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <strong>Done!</strong> <span data-bind="text: success"></span>
    </div>    
</div>
